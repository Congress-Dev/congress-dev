{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "baseUrl": ".",
        "paths": {
            "common": ["src/common"],
            "common/*": ["src/common/*"],

            "components": ["src/components"],
            "components/*": ["src/components/*"],

            "context": ["src/context"],
            "context/*": ["src/context/*"],

            "pages": ["src/pages"],
            "pages/*": ["src/pages/*"],

            "styles/*": ["src/styles/*"]
        }
    },
    "include": ["src/**/*"], // Ensure VS Code includes relevant files
    "exclude": ["node_modules", "public"] // Exclude irrelevant folders
}
