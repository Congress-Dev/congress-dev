server {
    server_name congress.dev default_server;
    root /var/www/congress;
    index index.html;
    location / {
        try_files $uri index.html;
    }
    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;
    ssl_certificate /etc/letsencrypt/live/congress.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/congress.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    server_name api.congress.dev;
    location / {
        proxy_pass http://congress_parser_api:9090;
    }
    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;
    ssl_certificate /etc/letsencrypt/live/congress.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/congress.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}